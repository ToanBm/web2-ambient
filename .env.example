# Ambient (enabled by default)
AMBIENT_ENABLED=true
AMBIENT_API_KEY=your-ambient-api-key-here
AMBIENT_API_URL=https://api.ambient.xyz/v1/chat/completions
AMBIENT_MODEL=zai-org/GLM-4.6
AMBIENT_RECEIPT_SAVE=false
AMBIENT_RECEIPT_DIR=data/receipts

# Benchmarking (disabled by default)
BENCH_ENABLED=false
BENCH_WARMUP_RUNS=1
BENCH_RUNS=3
BENCH_STALL_THRESHOLD_MS=2000
BENCH_OUTPUT=data/bench.jsonl

# Request parameters (optional)
# REQUEST_TEMPERATURE=0.7
# REQUEST_MAX_TOKENS=512
# REQUEST_TOP_P=0.9
# REQUEST_VERBOSE=true

# Refusal detection
REVIEW_FILE=data/human_review.jsonl
